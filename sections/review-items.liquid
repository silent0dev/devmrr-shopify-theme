<section class="reviews-section">
    {% if section.settings.heading != blank %}
        <h2 class="heading">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="review-items">
        {% for block in section.blocks %}
            <div class="review-item">
                <div class="review-content">
                    {% if block.settings.avatar != blank %}
                        <a class="image-warpper" href="{{ block.settings.link }}">
                            {{ block.settings.avatar | img_url: '250x' | img_tag }}
                        </a>
                    {% endif %}
                    {% if block.settings.comment != blank %}
                        <div class="comment">
                            {{ block.settings.comment }}
                        </div>
                    {% endif %}
                    {% if block.settings.author != blank %}
                        <a class="author" href="{{ block.settings.link }}">{{ block.settings.author }}</a>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
    {% if section.settings.btn_link != blank and section.settings.btn_label != blank %}
        <a class="btn btn--primary link-slder" href="{{ section.settings.btn_link }}">
            <span class="slider-text-1">{{ section.settings.btn_label }}</span>
            <span class="slider-text-2">{{ section.settings.btn_label }}</span>
        </a>
    {% endif %}
</section>
{% schema %}
{
    "name": "Reviews",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "text",
            "id": "btn_label",
            "label": "Button Label"
        },
        {
            "type": "url",
            "id": "btn_link",
            "label": "Button Link"
        }
    ],
    "blocks": [
        {
            "type": "review",
            "name": "Review",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "avatar",
                    "label": "Avatar"
                },
                {
                    "type": "richtext",
                    "id": "comment",
                    "label": "Comment"
                },
                {
                    "type": "text",
                    "id": "author",
                    "label": "Author"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        }
    ],
    "max_blocks": 3,
    "presets": [
        {
            "name": "Reviews"
        }
    ]
}
{% endschema %}