<div class="video__banner-wraper">
    {% if section.settings.vimeo_video_id != blank or section.settings.delivery_video_id or section.settings.youtube_video_id %}
        <div class="video__banner-video small-hide">
            {% if section.settings.vimeo_video_id != blank %}
                <iframe src="https://player.vimeo.com/video/{{ section.settings.vimeo_video_id }}?loop=true&autoplay=true&muted=true&gesture=media&playsinline=false&byline=false&portrait=false&title=false&speed=true&transparent=false&sidedock=false&controls=false" allowfullscreen="" allowtransparency="" allow="autoplay" data-ready="true" tabindex="-1"></iframe>
            {% elsif section.settings.delivery_video_id != blank %}
                <iframe src="https://iframe.videodelivery.net/{{ section.settings.delivery_video_id }}?muted=true&amp;loop=true&amp;autoplay=true&amp;controls=false" allow="accelerometer; gyroscope; autoplay; encrypted-media; picture-in-picture;" allowfullscreen="true"></iframe>
            {% elsif section.settings.youtube_video_id != blank %}
                <iframe src="http://www.youtube.com/embed/{{ section.settings.youtube_video_id }}?playlist={{ section.settings.youtube_video_id }}&loop=1&autoplay=1&controls=1&showinfo=0&mute=1" frameborder="0" allowfullscreen></iframe>
            {% endif %}
        </div>
    {% endif %}
    {% if section.settings.mobile_image != blank %}
        <div class="video__banner-image medium-hide large-up-hide">
            {{ section.settings.mobile_image | img_url: '750x' | img_tag }}
        </div>
    {% endif %}
    {% if section.settings.heading != blank %}
        <div class="video__banner-text-content">
            <h2 class="video__banner-heading small-hide">{{ section.settings.heading }}</h2>
            <h2 class="video__banner-heading medium-hide large-up-hide">{{ section.settings.mobile_heading }}</h2>
            {% if section.settings.button_link != blank and section.settings.button_label != blank %}
                <a href="{{ section.settings.button_link }}" class="btn btn--outline link-slider">
                    <span class="slider-text-1">{{ section.settings.button_label }}</span>
                    <span class="slider-text-2">{{ section.settings.button_label }}</span>
                </a>
            {% endif %}
        </div>
    {% endif %}
</div>
{% schema %}
{
    "name": "Video banner",
    "class": "video-banner",
    "settings": [
        {
            "type": "text",
            "id": "vimeo_video_id",
            "label": "Vimeo Video ID"
        },
        {
            "type": "text",
            "id": "delivery_video_id",
            "label": "Delivery Video ID"
        },
        {
            "type": "text",
            "id": "youtube_video_id",
            "label": "YouTube Video ID"
        },
        {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "Mobile Image"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "text",
            "id": "mobile_heading",
            "label": "Mobile Heading"
        },
        {
            "type": "text",
            "id": "button_label",
            "label": "Button Label"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
        }
    ],
    "presets": [
        {
            "name": "Video banner"
        }
    ]
}
{% endschema %}