<section class="iot-section {{ section.settings.layout }}">
    {% if section.settings.image != blank %}
        <div class="iot-image" style="min-height: {{ section.settings.min_height }}px;">
            <img class="small-hide" src="{{ section.settings.image | img_url: '2048x' }}">
            {% assign mobile_image = section.settings.mobile_image | default: section.settings.image %}
            <img class="large-up-hide medium-hide" src="{{ mobile_image | img_url: '2048x' }}">
            <img class="hide-image" src="{{ section.settings.image | img_url: '2048x' }}">
        </div>
    {% endif %}
    <div class="iot-text">
        <div class="iot-text-wrapper">
            {% if section.settings.subheading != blank %}
                <p class="subheading">{{ section.settings.subheading }}</p>
            {% endif %}
            {% if section.settings.heading != blank %}
                <h2 class="heading" {% if section.settings.max_width < 300 %}style="font-size: 20px"{% endif %}>{{ section.settings.heading }}</h2>
            {% endif %}
            {% if section.settings.content != blank %}
                <div class="richtext">
                    {{ section.settings.content }}
                </div>
            {% endif %}
            {% if section.settings.over_image != blank %}
                <div class="over-image text-{{ section.settings.image_align }}">
                    {{ section.settings.over_image | img_url: '250x' | img_tag }}
                </div>
            {% endif %}
            {% if section.settings.author != blank %}
                <div class="author text-{{ section.settings.image_align }}"">
                    <span>{{ section.settings.author }}</span>
                </div>
            {% endif %}
            {% if section.settings.btn_label != blank and section.settings.btn_link != blank %}
                <a href="{{ section.settings.btn_link }}" class="animated_link link-slider">
                    <span class="slider-text-1">{{ section.settings.btn_label }}</span>
                    <span class="slider-text-2">{{ section.settings.btn_label }}</span>
                </a>
            {% endif %}
        </div>
    </div>
</section>
{% schema %}
{
    "name": "Image over text",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "Mobile Image"
        },
        {
            "type": "range",
            "id": "min_height",
            "min": 500,
            "max": 1000,
            "step": 10,
            "unit": "px",
            "label": "Image Height",
            "default": 850
        },
        {
            "type": "text",
            "id": "subheading",
            "label": "Sub Heading"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "richtext",
            "id": "content",
            "label": "Content"
        },
        {
            "type": "image_picker",
            "id": "over_image",
            "label": "Over Image"
        },
        {
            "type": "select",
            "id": "image_align",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ],
            "default": "left",
            "label": "Image Align"
        },
        {
            "type": "text",
            "id": "author",
            "label": "Author"
        },
        {
            "type": "text",
            "id": "btn_label",
            "label": "Button Label"
        },
        {
            "type": "url",
            "id": "btn_link",
            "label": "Button Link"
        },
        {
            "type": "select",
            "id": "layout",
            "options": [
                {
                    "value": "layout_1",
                    "label": "Layout 1"
                },
                {
                    "value": "layout_2",
                    "label": "Layout 2"
                },
                {
                    "value": "layout_3",
                    "label": "Layout 3"
                }
            ],
            "default": "layout_1",
            "label": "Layout"
        }
    ],
    "presets": [
        {
            "name": "Image over text"
        }
    ]
}
{% endschema %}