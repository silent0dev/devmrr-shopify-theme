{% if section.blocks.size > 0 and section.settings.handle != blank %}
    <div class="megamenu" id="megamenu--{{ section.settings.handle | handleize }}">
        {% assign promotion_count = 0 %}
        {% for block in section.blocks %}
            {% if block.type == 'featured_promotion' %}
                {% assign promotion_count = promotion_count | plus: 1 %}
            {% endif %}
        {% endfor %}
        {% if promotion_count > 0 %}
            {% assign promotion_index = 0 %}
            <div class="mega-menu__promotion mega-menu__wrap {% if promotion_count < 5 %}mega-menu__promotion-2{% endif %}">
                {% for block in section.blocks %}
                    {% if block.type == 'featured_promotion' %}
                        {% if promotion_count == 5 and promotion_index == 0 %}
                            <div class="mega-menu__promotion-left">
                        {% endif %}
                        <div class="mega-menu__promotion-item">
                            <a href="{{ block.settings.link }}">
                                <h2 class="mega-menu__heading">
                                    {{ block.settings.heading }}
                                </h2>
                            </a>
                            {% if block.settings.subheading != blank %}
                                <p class="mega-menu__subheading">
                                    {{ block.settings.subheading }}
                                </p>
                            {% endif %}
                            {% if block.settings.image != blank %}
                                {% assign width = block.settings.image.width | plus: 0.0 %}
                                {% assign height = block.settings.image.height | plus: 0.0 %}
                                {% assign st = height | divided_by: width | times: 100 %}
                                <a href="{{ block.settings.link }}" class="mega-menu__image" style="padding-bottom: {{ st }}%;">
                                    {{ block.settings.image | img_url: '750x' | img_tag }}
                                </a>
                            {% endif %}
                        </div>
                        {% if promotion_count == 5 and promotion_index == 2 %}
                            </div>
                            <div class="mega-menu__promotion-right">
                        {% endif %}
                        {% if promotion_count == 5 and promotion_index == 4 %}
                            </div>
                        {% endif %}
                        {% assign promotion_index = promotion_index | plus: 1 %}
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}
        {% for block in section.blocks %}
            {% if block.type == 'single_link' %}
                <div class="mega-menu__single_link mega-menu__wrap">
                    <a href="{{ block.settings.link }}" class="animated_link link-slider">
                        <span class="slider-text-1">{{ block.settings.label }}</span>
                        <span class="slider-text-2">{{ block.settings.label }}</span>
                    </a>
                </div>
            {% endif %}
            {% if block.type == 'sub_menu' %}
                <div class="mega-menu__submenu mega-menu__wrap">
                    <div class="mega-menu__submenu-item">
                        {% for link in block.settings.submenu1.links %}
                            <a href="{{ link.url }}" class="btn btn--outline link-slider">
                                <span class="slider-text-1">{{ link.title }}</span>
                                <span class="slider-text-2">{{ link.title }}</span>
                            </a>
                        {% endfor %}
                    </div>
                    <div class="mega-menu__submenu-item">
                        {% for link in block.settings.submenu2.links %}
                            <a href="{{ link.url }}" class="btn btn--outline link-slider">
                                <span class="slider-text-1">{{ link.title }}</span>
                                <span class="slider-text-2">{{ link.title }}</span>
                            </a>
                        {% endfor %}
                    </div>
                    <div class="mega-menu__submenu-item">
                        {% for link in block.settings.submenu3.links %}
                            <a href="{{ link.url }}" class="btn btn--outline link-slider">
                                <span class="slider-text-1">{{ link.title }}</span>
                                <span class="slider-text-2">{{ link.title }}</span>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <div class="draw-megamenu__content" id="megamenu-drawer--{{ section.settings.handle | handleize }}">
        {% for block in section.blocks %}
            {% if block.type == 'featured_promotion' %}
                <a class="draw-megamenu__link" href="{{ block.settings.link }}">
                    {% if block.settings.subheading != blank %}
                        <p class="draw-megamenu__subheading">{{ block.settings.subheading }}</p>
                    {% endif %}
                    <p class="draw-megamenu__heading">{{ block.settings.heading }}</p>
                </a>
            {% endif %}
        {% endfor %}
        {% for block in section.blocks %}
            {% if block.type == 'sub_menu' %}
                {% for link in block.settings.submenu1.links %}
                    <a class="draw-megamenu__link" href="{{ link.url }}">
                        <p class="draw-megamenu__heading">{{ link.title }}</p>
                    </a>
                {% endfor %}
                {% for link in block.settings.submenu2.links %}
                    <a class="draw-megamenu__link" href="{{ link.url }}">
                        <p class="draw-megamenu__heading">{{ link.title }}</p>
                    </a>
                {% endfor %}
                {% for link in block.settings.submenu3.links %}
                    <a class="draw-megamenu__link" href="{{ link.url }}">
                        <p class="draw-megamenu__heading">{{ link.title }}</p>
                    </a>
                {% endfor %}
            {% endif %}
        {% endfor %}
    </div>
{% endif %}
