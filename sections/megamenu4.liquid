    "name": "MegaMenu4",
    "class": "header_megamenu",
    "settings": [
        {
            "type": "text",
            "id": "handle",
            "label": "Parent Link"
        }
    ],
    "blocks": [
        {
            "type": "featured_promotion",
            "name": "Featured Promotion",
            "settings": [
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                },
                {
                    "type": "text",
                    "id": "subheading",
                    "label": "SubHeading"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        },
        {
            "type": "single_link",
            "name": "Single Link",
            "settings": [
                {
                    "type": "text",
                    "id": "label",
                    "label": "Label"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        },
        {
            "type": "sub_menu",
            "name": "SubMenu",
            "settings": [
                {
                    "type": "link_list",
                    "id": "submenu1",
                    "label": "Submenu1"
                },
                {
                    "type": "link_list",
                    "id": "submenu2",
                    "label": "Submenu2"
                },
                {
                    "type": "link_list",
                    "id": "submenu3",
                    "label": "Submenu3"
                }
            ]
        }
    ]
}
{% endschema %}