<section class="image-with-text-2">
    {% if section.settings.back_image != blank %}
        {% assign width = section.settings.back_image.width | plus: 0.0 %}
        {% assign height = section.settings.back_image.height | plus: 0.0 %}
        {% assign pb = height | divided_by: width | times: 100 %}
        <div class="image-warpper" style="height: 0;padding-bottom: {{ pb }}%">
            {{ section.settings.back_image | img_url: '2040x' | img_tag }}
        </div>
    {% endif %}
    {% if section.settings.image != blank %}
        <div class="top-image text-center">
            {{ section.settings.image | img_url: '750x' | img_tag }}
        </div>
    {% endif %}
    <div class="over-text text-center">
        {% if section.settings.heading != blank %}
            <h2 class="heading">{{ section.settings.heading }}</h2>
        {% endif %}
        <div class="sub-content">
            {% if section.settings.subheading != blank %}
                <p class="subheading">{{ section.settings.subheading }}</p>
            {% endif %}
            {% if section.settings.btn_label != blank and section.settings.btn_link != blank %}
                <a class="btn btn--outline link-slider" href="{{ section.settings.btn_link }}">
                    <span class="slider-text-1">{{ section.settings.btn_label }}</span>
                    <span class="slider-text-2">{{ section.settings.btn_label }}</span>
                </a>
            {% endif %}
        </div>
    </div>
</section>
{% schema %}
{
    "name": "Image with text 2",
    "settings": [
        {
            "type": "image_picker",
            "id": "back_image",
            "label": "Background Image"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Top Image"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "text",
            "id": "subheading",
            "label": "SubHeading"
        },
        {
            "type": "text",
            "id": "btn_label",
            "label": "Button Label"
        },
        {
            "type": "url",
            "id": "btn_link",
            "label": "Button Link"
        }
    ],
    "presets": [
        {
            "name": "Image with text 2"
        }
    ]
}
{% endschema %}